<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography -->
    <style name="MyTextAppearance" parent="TextAppearance.AppCompat.Body2"/>

    <style name="MyTextAppearance.Title">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_white_90</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="MyTextAppearance.Headline">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textDirection">locale</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyTextAppearance.Body">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:fontFamily">@font/rubik</item>
